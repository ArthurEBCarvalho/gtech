<!DOCTYPE html>
<html>
<head>
	<title>Gtech</title>
	<%= stylesheet_link_tag    "application", media: :all %>
	<%= javascript_include_tag "application", media: :all %>
	
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Início</a>
				</div>

				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li <%= "class=active" if request.original_fullpath.include?("/alunos") %>><a href="/alunos">Alunos</a></li>
						<li <%= "class=active" if request.original_fullpath.include?("/materia") %>><a href="/materia">Matérias</a></li>
						<li <%= "class=active" if request.original_fullpath.include?("/provas") %>><a href="/provas">Provas</a></li>
					</ul>
				</div>
			</div>
		</nav>
		<%= yield %>
	</div>
</body>
</html>
